  "title": "SafeBaige - mmWave Radar Car Detection",
  "description": "ESP32 receiving LD2451 radar data via Serial2 (pins 25 & 27)",
  "editor": "wokwi",
  "parts": [
    {
      "type": "board-esp32-devkit-c-v4",
      "id": "esp32",
      "top": 0,
      "left": 0,
      "attrs": {
        "name": "ESP32 DevKit V4"
      }
    },
    { "type": "chip-hlk-ld2451", "id": "radar1", "top": -100, "left": 100 }
  ],
  "connections": [
    ["esp32:TX", "$serialMonitor:RX", "", []],
    ["esp32:RX", "$serialMonitor:TX", "", []],
    [ "radar1:TX", "esp32:25", "green", [] ],
    [ "radar1:RX", "esp32:27", "blue", [] ],
    [ "radar1:GND", "esp32:GND", "black", [] ]
  ]
}
